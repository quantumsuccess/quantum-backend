{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                 // <-- important
    "moduleResolution": "NodeNext",       // <-- important for ESM path resolution
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
