{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "lib": ["ES2020"] // âœ… exclude DOM so Express Response is used
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
